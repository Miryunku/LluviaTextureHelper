                                 Margin="{StaticResource MediumMarginB}"
                                 Grid.Row="3" Grid.Column="2"/>

                        <Button Click="Button_Click_ArbitraryTexturesApplyChanges"
                                Style="{StaticResource ButtonStyle1}"
                                Content="{x:Static p:Resources.Apply}"
                                Grid.Row="4" Grid.ColumnSpan="3"/>
                    </Grid>
                </Expander>
            </StackPanel>
        </ScrollViewer>

        <ScrollViewer Grid.Row="1" Grid.Column="1" Style="{DynamicResource ScrollViewerStyle1}" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">

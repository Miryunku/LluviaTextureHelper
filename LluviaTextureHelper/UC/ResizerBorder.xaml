<UserControl x:Class="LluviaTextureHelper.UC.ResizerBorder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LluviaTextureHelper.UC"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle Fill="Transparent" Stroke="Yellow" StrokeThickness="1" StrokeDashArray="4 4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Rectangle Name="leftHandle"  Width="10" Height="10" Margin="-5,0,0,0" Fill="White" Stroke="#555555" StrokeThickness="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Rectangle Name="topHandle" Width="10" Height="10" Margin="0,-5,0,0" Fill="White" Stroke="#555555" StrokeThickness="1" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Rectangle Name="rightHandle" Width="10" Height="10" Margin="0,0,-5,0" Fill="White" Stroke="#555555" StrokeThickness="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Rectangle Name="bottomHandle" Width="10" Height="10" Margin="0,0,0,-5" Fill="White" Stroke="#555555" StrokeThickness="1" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
